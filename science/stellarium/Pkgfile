# Description: photo-realistic sky generator
# URL: http://stellarium.free.fr
# Depends on: x11
# Packager: acrux

name=stellarium
version=0.6.0
release=1
source=(http://heanet.dl.sourceforge.net/sourceforge/$name/$name-$version.tar.gz)

build() {
    cd $name-$version
    ./configure --prefix=/usr --disable-nls
    make
    make DESTDIR=$PKG install
}
