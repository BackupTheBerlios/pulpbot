# Maintainer: Coviello Giuseppe <slash@crux-it.org>
# Description: A replacement to standard ports utility that allows to select favorites repositories and versions for ports
# URL: http://www.crux-it.org
# Depends on: cvsup, httpup

name=ilenia
version=1.0
release=1
source=(http://www.crux-it.org/evolution/src/$name-$version.tar.gz \
    crux.cvsup.in \
    crux-it.cvsup.in \
    clc.cvsup.in)

build () {
    cd $name-$version
    ./configure --prefix=/usr
    make
    make DESTDIR=$PKG install
    mkdir $PKG/usr/ports
    CRUX_VERSION=`crux|head -n 1|sed "s|CRUX version ||"|sed "s|\.|\_|"`
    cat ../crux.cvsup.in|sed "s|#VERION#|$CRUX_VERSION|" > $PKG/etc/ports/crux.cvsup
    cat ../crux-it.cvsup.in|sed "s|#VERION#|$CRUX_VERSION|" > $PKG/etc/ports/crux-it.cvsup
    cat ../clc.cvsup.in|sed "s|#VERION#|$CRUX_VERSION|" > $PKG/etc/ports/clc.cvsup
    cd $PKG/usr/bin
    ln -s ilenia ports
    cd $PKG/usr/man/man8
    ln -s ilenia.8.gz ports.8.gz
}
