# $Id: Pkgfile,v 1.1 2004/11/10 20:51:04 yankeegohome Exp $
# Packager: Stefano Esposito <yankeegohome@crux-it.org>
# Maintainer: Stefano Esposito <yankeegohome@crux-it.org>
# Description: Gnome ICQ client
# URL: http://gnomeicu.sf.net
# Depends on: gtk libgnome libgnomeui

name=gnomeicu
version=0.99.5
release=1
source=(http://puzzle.dl.sourceforge.net/sourceforge/$name/$name-$version.tar.bz2)

build() {
	cd $name-$version
	./configure --prefix=/usr \
		    --disable-schemas-install
	make
	export GCONF_DISABLE_MAKEFILE_SCHEMA_INSTALL=1
	make DESTDIR=$PKG install
}
