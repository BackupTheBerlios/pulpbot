# $Id: Pkgfile,v 1.1 2004/09/27 20:56:04 slash Exp $
# Description: utility library for X keyboard-related projects
# URL: http://freedesktop.org/Software/LibXklavier
# Packager: Robert McMeekin <rrm3@rrm3.org>
# Maintainer: Coviello Giuseppe <slash@crux-it.org>
# Depends on: x11

name=libxklavier
version=1.02
release=1
source=(http://ftp.gnome.org/pub/GNOME/desktop/2.8/2.8.0/sources/$name-$version.tar.gz)

build() {
	cd $name-$version
	./configure --prefix=/usr \
	            --disable-doxygen \
	            --with-xkb-base=/etc/X11/xkb
	make
	make DESTDIR=$PKG install
}
