# $Id: Pkgfile,v 1.1 2004/09/27 20:56:30 slash Exp $
# Description: GNOME CUPS Library
# URL: 
# Packager: Robert McMeekin <rrm3@rrm3.org>
# Maintainer: Coviello Giuseppe <slash@crux-it.org>
# Depends on: gnome-desktop, cups

name=libgnomecups
version=0.1.12
release=1
source=(http://ftp.gnome.org/pub/GNOME/sources/libgnomecups/0.1/$name-$version.tar.bz2)

build() {
    cd $name-$version
    sed -i 's/USE_NLS=yes/USE_NLS=no/
	        s/ENABLE_NLS 1/ENABLE_NLS 0/' configure
    ./configure --prefix=/usr 
    make
    make DESTDIR=$PKG install
    rm -fr $PKG/usr/share/gtk-doc
}
