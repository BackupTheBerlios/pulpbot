# $Id: Pkgfile,v 1.1 2004/09/27 20:57:07 slash Exp $
# Description: write files to a CD burner in Nautilus
# URL: http://cvs.gnome.org/viewcvs/nautilus-cd-burner/
# Packager: Robert McMeekin <rrm3@rrm3.org>
# Maintainer: Coviello Giuseppe <slash@crux-it.org>
# Depends on: nautilus


name=nautilus-cd-burner
version=2.8.0
release=1
source=(http://ftp.gnome.org/pub/GNOME/desktop/2.8/2.8.0/sources/$name-$version.tar.bz2)

build() {
    cd $name-$version 
    sed -i 's/USE_NLS=yes/USE_NLS=no/
                s/ENABLE_NLS 1/ENABLE_NLS 0/' configure
    ./configure --prefix=/usr \
	--libexecdir=/usr/lib/$name \
	--disable-schemas-install \
	--enable-dummy-write
    make
    export GCONF_DISABLE_MAKEFILE_SCHEMA_INSTALL=1
    make DESTDIR=$PKG install
}
