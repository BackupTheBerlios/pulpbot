name=gnome
version=2.8.0
release=1
source=()

build() {
	set +x
	set +e
        echo 'This is an empty port'
	echo 'Build with prt-get depinst gnome --install-scripts'
	echo 'Alternatively use "prt-get grpinst" to stop on errors'
	echo 'This will install all ports which belong to the GNOME Desktop'
	mkdir -p $PKG/tmp
	echo $version > $PKG/tmp/GNOME
}

