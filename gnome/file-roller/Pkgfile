# $Id: Pkgfile,v 1.1 2004/09/27 20:55:56 slash Exp $
# Description: archive manager utility for the GNOME Environment
# URL: http://fileroller.sourceforge.net/
# Packager: Robert McMeekin <rrm3@rrm3.org>
# Maintainer: Coviello Giuseppe <slash@crux-it.org>
# Depends on: libgnomeui

name=file-roller
version=2.8.0
release=1
source=(http://ftp.gnome.org/pub/GNOME/desktop/2.8/2.8.0/sources/$name-$version.tar.bz2 
        $name.patch)

build() {
    cd $name-$version
    patch -p1 < ../$name.patch	
    ./configure --prefix=/usr \
	--disable-schemas-install
    make
    test -f help/C/$name-C.omf.out || cp help/C/$name-C.omf{,.out}
    export GCONF_DISABLE_MAKEFILE_SCHEMA_INSTALL=1
    make DESTDIR=$PKG install
}
