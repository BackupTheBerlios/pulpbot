# Description:  
# URL: http://gtkmm.sourceforge.net/
# Depends on: libgdamm 

name=gtkmm-hello
version=2.4.1
release=1
source=(http://ftp.gnome.org/pub/GNOME/sources/gtkmm_hello/2.4/$name-$version.tar.bz2)

build () {
	cd $name-$version
	./configure --prefix=/usr --disable-nls
	make
	make DESTDIR=$PKG install
}
